{% extends 'layout.app' %}

{% block content %}

	<div class="container">

	{% if errors.any() %}
		<ul>
			{% for errors in errors.all() %}
				<li> {{ error }} </li>
			{% endfor %}
		</ul>
	{% endif %}



	{{ form_open({'method': 'POST', url:route('colis.store') }) }}

		<div class="form-group">
			{{ form_label('number','Num√©ro colis') }}
			{{ form_text('number', (colis.number) ) }}

			{{ form_label('color','Couleur') }}
			{{ form_select('color', {'a':'b','c':'d'}) }}

			{{ form_label('id_adress','Adresse') }}
