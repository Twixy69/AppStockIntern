{% extends 'layout.app' %}

{% block content %}

	<div class="container">

	{% if errors.any() %}
		<ul>
			{% for errors in errors.all() %}
				<li> {{ error }} </li>
			{% endfor %}
		</ul>
	{% endif %}



	{{ form_open({'method': 'POST', url:route('adresse.store') }) }}

		<div class="form-group">
			{{ form_label('name','Nom Adresse') }}
