{% extends 'layout.app' %}


{% block content %}

	<div class="container">

	{% if errors.any() %}
		<ul>
			{% for errors in errors.all() %}
				<li> {{ error }} </li>
			{% endfor %}
		</ul>
	{% endif %}

	Ceci est la vue d'édition des pièces.


	{{ form_open({'method': 'PUT', url:route('piece.update',[pieces.id]) }) }}

	{{ form_label('ref_piece','Reférence Pièce') }}
	{{ form_text('ref_piece', (pieces.ref_piece) ) }}

	<label for="id_lot">Lot</label>
	<select id="id_lot" name="id_lot">
	{% for lot in lots %}
		{% if pieces.id_lot == lot.id %}
			<option value="{{ lot.id }}" selected> {{lot.affaire.ref_affaire}} - {{ lot.ref_lot }}
		{% else %}
			<option value="{{ lot.id }}"> {{lot.affaire.ref_affaire}} - {{ lot.ref_lot }}
		{% endif %}
	{% endfor %}
	</select>

	{{ form_label('quantity','Quantité') }}
	{{ form_text('quantity', (pieces.quantity) ) }}

	{{ form_label('unit_weight','Poids Unitaire') }}
	{{ form_text('unit_weight', (pieces.unit_weight) ) }}

	{{ form_label('designation','Designation') }}
	{{ form_text('designation', (pieces.designation) ) }}

	{{ form_submit('save', {'class':'btn btn-primary'}) }}

	{{ form_close() }}

	</div>
{% endblock %}
